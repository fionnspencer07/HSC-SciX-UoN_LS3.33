{
  "name": "RStudio Server",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "runArgs": ["--cap-add=SYS_ADMIN"],
  "forwardPorts": [8787],
  "postCreateCommand": "rstudio-server start",
  "customizations": {
    "vscode": {
      "extensions": [
        "Ikuyadeu.r",
        "REditorSupport.r-lsp"
      ]
    }
  },
  "remoteUser": "codespace"
}
